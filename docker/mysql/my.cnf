# MySQL 8.0 Configuration for Toporia Framework
# Optimized for development with good performance

[mysqld]
# Basic settings
default-authentication-plugin = mysql_native_password
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Connection settings
max_connections = 151
max_allowed_packet = 64M
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# Buffer pool settings (adjust based on available RAM)
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M

# Query cache (disabled in MySQL 8.0+, but good to document)
# query_cache_type = 0
# query_cache_size = 0

# Temporary tables
tmp_table_size = 32M
max_heap_table_size = 32M

# Thread cache
thread_cache_size = 8

# Table cache
table_open_cache = 2000
table_definition_cache = 1400

# Performance optimizations
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_stats_on_metadata = 0

# Slow query log (disabled by default, enable for debugging)
slow_query_log = 0
long_query_time = 2

# Error log (using default location /var/log/mysqld.log or stderr)
# log_error = /var/log/mysql/error.log

# Binary log (disabled in development to save space)
skip-log-bin

# Security
local_infile = 0

[client]
default-character-set = utf8mb4
